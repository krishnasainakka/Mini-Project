<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <link rel="stylesheet" href="css/signup.css">
</head>
<body>
    <ul>
        <li><a class="active" href="#home">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="#">Help</a></li>
        <li><a href="#">Contact</a></li>
    </ul>
    
    <div class="footmarquee" style="font-size: 13px;">
      <marquee behavior="alternate" direction="left">
          <b id="heading">DECENTRALIZED NEWS ARTICLE PUBLISHER </b>
        </marquee>
  </div>

    <section id="login">
        <div class="forms">
          <div class="form-wrapper is-active">
            <button type="button" class="switcher switcher-login">
              User SignUp
              <span class="underline"></span>
            </button>
            <form class="form form-login" action="/signup" method="POST">
              <fieldset>
                <legend>Please, enter your email and password for login.</legend>
                <div class="input-block">
                    <label for="signupname">Name</label>
                    <input id="signupname" name="signupname" type="text" required>
                </div>
                
                <div class="input-block">
                  <label for="signupemail">E-mail</label>
                  <input id="signupemail" name="signupemail" type="email" required>
                </div>
                <div class="input-block">
                  <label for="signuppassword">Password</label>
                  <input id="signuppassword" name="signuppassword" type="password" required>
                </div>
                <div class="input-block">
                    <label for="signupconfirmpassword">Confirm password</label>
                    <input id="signupconfirmpassword" name="signupconfirmpassword" type="password" required>
                  </div>

              </fieldset>
              <button type="submit" class="btn-login" value="Signup">Signup</button>
            </form>
          </div>

          <div class="form-wrapper">
            <button type="button" class="switcher switcher-signup" value="">
              NewsChannel Sign Up
              <span class="underline"></span>
            </button>
            <form class="form form-signup" action="/newssignup" method="POST">
              <fieldset>
                <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                
                <div class="input-block">
                    <label for="newssignupname">Name</label>
                    <input id="newssignupname" type="text" name="newssignupname" required>
                </div>
                <div class="input-block">
                    <label for="tvchannel">Tv-Channel</label>
                    <input id="tvchannel" type="text" name="tvchannel" required>
                  </div>
                <div class="input-block">
                  <label for="newssignupemail">E-mail</label>
                  <input id="newssignupemail" type="email" name="newssignupemail" required>
                </div>
                <div class="input-block">
                  <label for="newssignuppassword">Password</label>
                  <input id="newssignuppassword" type="password" name="newssignuppassword" required>
                </div>
                <div class="input-block">
                  <label for="newssignupconfirmpassword">Confirm password</label>
                  <input id="newssignupconfirmpassword" type="password" name="newssignupconfirmpassword" required>
                </div>
                {{!-- <div>
                  <label for="file">Attach File for verification:</label>
                  <br>
                <input type="file" name="photo" id="file">
                </div> --}}
              </fieldset>
              <button type="submit" class="btn-signup" value="newssignup">Signup</button>
            </form>
          </div>
        </div>
        <div class="acc">
          <p>Already have an account <a href="/">Login</a></p>
        </div>
      </section>

      <script>
        const switchers = [...document.querySelectorAll('.switcher')]

        switchers.forEach(item => {
            item.addEventListener('click', function() {
                switchers.forEach(item => item.parentElement.classList.remove('is-active'))
                this.parentElement.classList.add('is-active')
            })
        })
      </script>
</body>
</html>